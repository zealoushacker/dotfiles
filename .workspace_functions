#!/bin/bash
function work() {
  work_dir="$HOME/Documents/work/"
  type=$1
  client_or_project=$2
  project=$3
  cd $work_dir
  if [[ $type == "f" ]]
  then cd freelance/Clients/$client_or_project/$project
  fi
  if [[ $type == "p" ]] 
  then cd personal/$client_or_project
  fi
}

#TMUX
#PRE-REQUISITE: TMUX installed on your system
function tmux-connect() {
  tmux -S /tmp/tmux-socket attach -t pair
}
function tmux-ws() {
  # check whether a pair session already exists
  tmux_status=$(tmux -S /tmp/tmux-socket has-session -t pair)
  if [ "$?" -ne "0" ]; then 
    # if a pair session dne start one and detach from it
    tmux -S /tmp/tmux-socket new -d -s pair
    # execute the command that is passed in via the first argument in the current pane
    #$(cd $1)
    # first, split the panes vertically, creating a right-hand pane 10% of the screen
    tmux -S /tmp/tmux-socket split-window -h -p 10
    # split the resulting right-hand pane into 1/3 and 2/3
    tmux -S /tmp/tmux-socket split-window -p 66
    # split the resulting bottom pane into two
    tmux -S /tmp/tmux-socket split-window -p 50
    
    # execute the commands in the TMUX_DEFAULTS environment variable if it exists
    if ( set -u; : $TMUX_DEFAULTS == 1 );
    then
      for var in "$TMUX_DEFAULTS"
      do
        #first split by semicolon 
        args=$(echo $var | tr ";" "\n")
        for arg in $args
        do
          echo "$arg"
        done
      done
    fi

    #tmux -S /tmp/tmux-socket send-keys -t 0 $1 "Enter"
    #tmux -S /tmp/tmux-socket send-keys -t 1 $1 "Enter"

    tmux-connect
  else
    tmux-connect
  fi
}

#GIT
alias gpom='git push origin master'
alias ga.='git add .'
alias gc-m='git commit -m'
alias gpush='git push origin master'

function git-push-develop() {
  git push origin develop
  git push stage develop:master
}
